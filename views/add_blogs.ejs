<%- include('layout/header') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h5 class="text-light">Thêm blog</h5>
                    </div>
                    <div class="card-body p-4">
                        <form action="/add" method="post" id="add-form" enctype="application/x-www-form-urlencoded">
                            <div class="mb-3">
                                <label for="name">Họ tên</label>
                                <input type="text" name="name" class="form-control form-control-lg" required />
                            </div>
                            <div class="mb-3">
                                <label for="mssv">MSSV</label>
                                <input type="number" name="mssv" class="form-control form-control-lg" required />
                            </div>
                            <div class="mb-3">
                                <label for="mess">Blog</label>
                                <input type="text" name="mess" class="form-control form-control-lg" required />
                            </div>
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Thêm blog" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer') %>